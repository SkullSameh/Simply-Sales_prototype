<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="VX12.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VX12"
    Shell.FlyoutBehavior="Disabled">


    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" ></ShellContent>
        </Tab>

        <Tab Title="Client" Icon="client.png">
            <ShellContent ContentTemplate="{DataTemplate local:Page2}" Route="Page2" ></ShellContent>
        </Tab>

        <Tab Title="Sales Rep" Icon="salesicon.jpeg">
            <ShellContent ContentTemplate="{DataTemplate local:Page3}" Route="Page3" ></ShellContent>
        </Tab>

        <Tab Title="Assign" Icon="assign.png">
            <ShellContent ContentTemplate="{DataTemplate local:Page4}" Route="Page4" ></ShellContent>
        </Tab>

        <Tab Title="Report" Icon="report.png">
            <ShellContent ContentTemplate="{DataTemplate local:Page5}" Route="Page5" ></ShellContent>
        </Tab>
    </TabBar>

</Shell>
